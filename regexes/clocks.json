      "trimStrings": [],
      "placement": [1, 2, 6],
      "disabled": false,
      "markdownOnly": true,
      "promptOnly": false,
      "runOnEdit": true,
      "substituteRegex": 0,
      "minDepth": null,
      "maxDepth": null
    },
    {
      "id": "8f34e9b9-3b24-4b3f-844a-07ec4d5d28b8",
      "scriptName": "├ transitions paired",
      "findRegex": "/⟦([^:]+):\\s*([^⟧]+)⟧([\\s\\S]*?)⟦\\/\\1⟧/gi",
      "replaceString": "<style>@keyframes trb{0%{transform:translateY(0)}100%{transform:translateY(-6px)}}</style><div style=\"background:linear-gradient(145deg,#1e1d1d,#171616);color:#d4ccc4;font-family:Georgia,serif;margin:14px 0;border-radius:12px;box-shadow:6px 6px 12px #0d0c0c,-6px -6px 12px #252323;overflow:hidden\"><div style=\"background:linear-gradient(145deg,#1e1d1d,#171616);padding:8px 14px;box-shadow:inset 4px 4px 8px #0d0c0c,inset -4px -4px 8px #252323;border-bottom:1px solid #2a2626;position:relative\"><b style=\"color:#7a9a72;text-transform:uppercase;letter-spacing:1px;font-size:.85em\">$1</b> <span style=\"color:#6a6060\">—</span> <span style=\"color:#a89a90\">$2</span><div style=\"position:absolute;top:50%;right:12px;transform:translateY(-50%);display:flex;gap:5px;align-items:flex-end;height:14px\"><div style=\"width:5px;height:5px;border-radius:50%;background:#7a9a72;animation:trb .5s alternate infinite ease\"></div><div style=\"width:5px;height:5px;border-radius:50%;background:#c9a227;animation:trb .5s .15s alternate infinite ease\"></div><div style=\"width:5px;height:5px;border-radius:50%;background:#a84a5a;animation:trb .5s .3s alternate infinite ease\"></div></div></div><div style=\"padding:12px 14px;font-size:.95em;color:#b0a8a0\">$3</div></div>",
      "trimStrings": [],
      "placement": [1, 2, 6],
      "disabled": false,
      "markdownOnly": true,
      "promptOnly": false,
      "runOnEdit": true,
      "substituteRegex": 0,
      "minDepth": null,
      "maxDepth": null
    },
    {
      "id": "76ba0e55-32c2-4567-9c3d-d64f26770982",
      "scriptName": "└ transitions music",
      "findRegex": "/♪(.+?)℗\\s*(.+?)\\s*-\\s*(.+?)♪/g",
      "replaceString": "<style>@keyframes marquee{0%{transform:translateX(100%)}100%{transform:translateX(-100%)}}@keyframes kprog{from{width:5%}to{width:100%}}</style><div style=\"font-family:Georgia,serif;padding:12px 14px;margin:6px 0;background:linear-gradient(145deg,#1e1d1d,#171616);border-radius:10px;box-shadow:6px 6px 12px #0d0c0c,-6px -6px 12px #252323\"><div style=\"overflow:hidden;margin-bottom:8px\"><div style=\"color:#c9a227;font-style:italic;white-space:nowrap;animation:marquee 15s linear infinite\">$1</div></div><div style=\"display:flex;align-items:center;gap:10px\"><span style=\"color:#a84a5a\">▶</span><div style=\"flex:1;height:2px;background:#0d0c0c;border-radius:2px;box-shadow:inset 1px 1px 2px #0a0909\"><div style=\"height:100%;background:linear-gradient(90deg,#a84a5a,#7a9a72);border-radius:2px;animation:kprog 20s linear infinite\"></div></div></div><div style=\"display:flex;justify-content:space-between;font-size:0.7em;margin-top:6px\"><span style=\"color:#7a9a72\">$2</span><span style=\"color:#a84a5a\">$3</span></div></div>",
      "trimStrings": [],
      "placement": [1, 2, 6],
      "disabled": false,
      "markdownOnly": true,
      "promptOnly": false,
      "runOnEdit": true,
      "substituteRegex": 0,
      "minDepth": null,
      "maxDepth": null
    }
  ]
